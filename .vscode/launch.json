    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "asgi:app",
                "--reload",
                "--reload-dir", "${workspaceFolder}/aegis",
                "--reload-dir", "${workspaceFolder}/athena-utils/src"
            ],
            "cwd": "${workspaceFolder}/aegis",
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/aegis"
            }
        },
        {
            "name": "Python: Polymetis Celery",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/watchmedo",
            "args": [
                "auto-restart",
                "--directory=${workspaceFolder}",
                "--pattern=*.py",
                "--recursive",
                "--",
                "celery",
                "-A", "polymetis.run:celery_app",
                "worker",
                "--loglevel=info"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PYTHONUNBUFFERED": "1"
            }
        }
    ]
}