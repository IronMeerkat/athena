{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "asgi:app",
                "--reload",
                "--reload-dir", "${workspaceFolder}/aegis",
                "--reload-dir", "${workspaceFolder}/athena-utils/src"
            ],
            "cwd": "${workspaceFolder}/aegis",
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/aegis",
                "PYTHONUNBUFFERED": "1",
                "PYTHONWARNINGS": "ignore::UserWarning"
            }
        },
        {
            "name": "Python: Polymetis Celery (with auto-restart)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/watchmedo",
            "args": [
                "auto-restart",
                "--directory=${workspaceFolder}/polymetis",
                "--directory=${workspaceFolder}/athena-utils",
                "--directory=${workspaceFolder}/ergane",
                "--patterns=*.py;*.yaml",
                "--recursive",
                "--",
                "celery",
                "-A", "run:celery_app",
                "worker",
                // "--beat",
                "--loglevel=info",
                "--concurrency=1",
                "--pool=solo",
                "--logfile=-"
            ],
            "cwd": "${workspaceFolder}/polymetis",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/polymetis",
                "PYTHONUNBUFFERED": "1",
                "PYTHONWARNINGS": "ignore::UserWarning"
            }
        },
        {
            "name": "Python: Polymetis Celery (debug mode)",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A", "run:celery_app",
                "worker",
                "--loglevel=debug",
                "--concurrency=1",
                "--pool=solo",
                "--logfile=-"
            ],
            "cwd": "${workspaceFolder}/polymetis",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/polymetis",
                "PYTHONUNBUFFERED": "1",
                "PYTHONWARNINGS": "ignore::UserWarning"
            }
        },
        {
            "name": "Python: Polymetis Celery (auto-restart + debug)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/watchmedo",
            "args": [
                "auto-restart",
                "--directory=${workspaceFolder}/polymetis",
                "--directory=${workspaceFolder}/athena-utils",
                "--directory=${workspaceFolder}/ergane",
                "--patterns=*.py;*.yaml",
                "--recursive",
                "--",
                "celery",
                "-A", "run:celery_app",
                "worker",
                "--loglevel=debug",
                "--concurrency=1",
                "--pool=solo",
                "--logfile=-"
            ],
            "cwd": "${workspaceFolder}/polymetis",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/polymetis",
                "PYTHONUNBUFFERED": "1",
                "PYTHONWARNINGS": "ignore::UserWarning"
            }
        },
        {
            "name": "Python: Attach to Celery Remote Debug",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "${workspaceFolder}"
                }
            ],
            "justMyCode": false
        }
    ]
}