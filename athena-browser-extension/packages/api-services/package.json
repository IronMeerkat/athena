{
  "name": "@extension/api-services",
  "version": "0.5.0",
  "description": "Shared API services for Athena extension (HTTP, WS, SSO, auth store)",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "types": "index.mts",
  "main": "dist/index.mjs",
  "scripts": {
    "clean:bundle": "rimraf dist",
    "clean:node_modules": "pnpx rimraf node_modules",
    "clean:turbo": "rimraf .turbo",
    "clean": "pnpm clean:bundle && pnpm clean:node_modules && pnpm clean:turbo",
    "ready": "tsc -b",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier . --write --ignore-path ../../.prettierignore",
    "type-check": "tsc --noEmit",
    "postinstall": "pnpm ready"
  },
  "dependencies": {
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@extension/tsconfig": "workspace:*",
    "@types/chrome": "workspace:*",
    "@types/node": "workspace:*"
  }
}

